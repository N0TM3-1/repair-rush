local score = 0

go.property("score_increment", 1) -- Imcrement ammount

function on_message(self, message_id, message, sender)
    if message_id == hash("increment") then
        score = score + self.score_increment
        msg.post("game:/gui#score", "update_score", { score })
    elseif message_id == hash("start_save") then
        msg.post(sender, "save_data", { score })
    elseif message_id == hash("get_score-end") then
        msg.post(sender, "score-end", { score })
    end
end
